{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Strictness */
    "strict": false,
    "noImplicitAny": false,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Type Support (ðŸ”¥ IMPORTANT FIX) */
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    /* Output */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Build Optimizations */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Misc */
    "removeComments": false,
    "preserveConstEnums": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
